.jumbotron
  - if user_signed_in?
    %h2="Welcome #{current_user.name}"
    %p.lead Select an action below.
    -if current_user.has_role? 'admin'
      .btn.btn-info=link_to 'Administer', admin_root_path
    -if current_user.has_role? 'dispatcher'
      .btn.btn-info=link_to 'Add Receipts', admin_receipts_path
    .btn.btn-warning=link_to 'Edit Profile', edit_admin_user_path(current_user)
    .btn.btn-danger=link_to 'Sign out', destroy_user_session_path, method: :delete
  -else
    %h2 Please Login
    %p.lead Login to get started tracking your receipts.
    .btn.btn-success= link_to 'Login', '#sign_in', 'data-toggle' => 'modal'
